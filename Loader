-- Function to display scripts
local function DisplayScripts(category)
	-- Clear previous scripts with animation
	for _, child in ScriptsFrame:GetChildren() do
		if child:IsA("Frame") then
			TweenService:Create(child, TweenInfo.new(0.2), {
				BackgroundTransparency = 1,
				Size = UDim2.new(0, 0, 0, 0)
			}):Play()
			child:Destroy()
		end
	end

	task.wait(0.2)

	-- Add matching scripts
	local count = 0
	for _, scriptData in ipairs(OfficialScripts) do
		if category == "All" or scriptData.Category == category then
			count = count + 1

			local scriptCard = Instance.new("Frame")
			scriptCard.Name = "ScriptCard"
			scriptCard.Size = UDim2.new(0, 200, 0, 120)
			scriptCard.BackgroundColor3 = Color3.fromRGB(20, 40, 60)
			scriptCard.BackgroundTransparency = 0.5
			scriptCard.BorderSizePixel = 0
			scriptCard.ClipsDescendants = true
			scriptCard.Parent = ScriptsFrame

			local cardCorner = Instance.new("UICorner")
			cardCorner.CornerRadius = UDim.new(0, 12)
			cardCorner.Parent = scriptCard

			local cardStroke = Instance.new("UIStroke")
			cardStroke.Color = Color3.fromRGB(100, 180, 255)
			cardStroke.Thickness = 1
			cardStroke.Transparency = 0.7
			cardStroke.Parent = scriptCard

			-- Script name
			local nameLabel = Instance.new("TextLabel")
			nameLabel.Name = "Name"
			nameLabel.Size = UDim2.new(1, -20, 0, 30)
			nameLabel.Position = UDim2.new(0, 10, 0, 10)
			nameLabel.BackgroundTransparency = 1
			nameLabel.Text = scriptData.Name
			nameLabel.TextColor3 = Color3.fromRGB(220, 240, 255)
			nameLabel.Font = Enum.Font.GothamBold
			nameLabel.TextSize = 16
			nameLabel.TextXAlignment = Enum.TextXAlignment.Left
			nameLabel.TextYAlignment = Enum.TextYAlignment.Top
			nameLabel.Parent = scriptCard

			-- Script description
			local descLabel = Instance.new("TextLabel")
			descLabel.Name = "Description"
			descLabel.Size = UDim2.new(1, -20, 0, 40)
			descLabel.Position = UDim2.new(0, 10, 0, 40)
			descLabel.BackgroundTransparency = 1
			descLabel.Text = scriptData.Description
			descLabel.TextColor3 = Color3.fromRGB(180, 220, 255)
			descLabel.Font = Enum.Font.Gotham
			descLabel.TextSize = 12
			descLabel.TextXAlignment = Enum.TextXAlignment.Left
			descLabel.TextWrapped = true
			descLabel.TextYAlignment = Enum.TextYAlignment.Top
			descLabel.Parent = scriptCard

			-- Execute button
			local executeButton = Instance.new("TextButton")
			executeButton.Name = "ExecuteButton"
			executeButton.Size = UDim2.new(1, -20, 0, 30)
			executeButton.Position = UDim2.new(0, 10, 1, -40)
			executeButton.BackgroundColor3 = Color3.fromRGB(0, 120, 200)
			executeButton.BackgroundTransparency = 0.3
			executeButton.BorderSizePixel = 0
			executeButton.Text = "EXECUTE"
			executeButton.TextColor3 = Color3.fromRGB(230, 240, 255)
			executeButton.Font = Enum.Font.GothamBold
			executeButton.TextSize = 14
			executeButton.Parent = scriptCard

			local buttonCorner = Instance.new("UICorner")
			buttonCorner.CornerRadius = UDim.new(0, 8)
			buttonCorner.Parent = executeButton

			-- Button animations
			executeButton.MouseEnter:Connect(function()
				TweenService:Create(executeButton, TweenInfo.new(0.2), {
					BackgroundTransparency = 0.1,
					TextColor3 = Color3.fromRGB(255, 255, 255)
				}):Play()
			end)

			executeButton.MouseLeave:Connect(function()
				TweenService:Create(executeButton, TweenInfo.new(0.2), {
					BackgroundTransparency = 0.3,
					TextColor3 = Color3.fromRGB(230, 240, 255)
				}):Play()
			end)

			executeButton.MouseButton1Click:Connect(function()
				executeButton.Text = "EXECUTING..."
				local success, err = pcall(function()
					loadstring(scriptData.Loadstring)()
				end)

				if success then
					executeButton.Text = "EXECUTED!"
					task.wait(1)
					executeButton.Text = "EXECUTE"
				else
					executeButton.Text = "ERROR!"
					warn("Script execution failed: " .. err)
					task.wait(1)
					executeButton.Text = "EXECUTE"
				end
			end)

			-- Animate card in
			scriptCard.Size = UDim2.new(0, 0, 0, 0)
			TweenService:Create(scriptCard, TweenInfo.new(0.3, Enum.EasingStyle.Back), {
				Size = UDim2.new(0, 200, 0, 120)
			}):Play()
		end
	end
end

-- Connect category buttons
for _, tab in CategoryTabs:GetChildren() do
	if tab:IsA("TextButton") then
		tab.MouseButton1Click:Connect(function()
			DisplayScripts(tab.Name)
		end)
	end
end

-- Initial animation
MainFrame.Size = UDim2.new(0, 0, 0, 0)
MainFrame.BackgroundTransparency = 1
CenterFrame(MainFrame)

TweenService:Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back), {
	Size = UDim2.new(0, 500, 0, 600),
	BackgroundTransparency = 0.2
}):Play()

-- Show all scripts by default
task.wait(0.5)
CategoryTabs.All.BackgroundColor3 = Color3.fromRGB(0, 120, 200)
CategoryTabs.All.TextColor3 = Color3.fromRGB(255, 255, 255)
DisplayScripts("All")
